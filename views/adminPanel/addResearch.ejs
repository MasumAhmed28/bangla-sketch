<style>
    .personal-link:hover {
        text-decoration: none;
        color: rgb(56, 204, 51);
    }

    .adminIndex {
        background: rgba(238, 240, 231, 0.815);
        height: 35px;
        padding: 5px;
        text-align: end;
    }

    .adminIndex:hover {
        background: #0B3861;
        color: white;
        height: 35px;
        padding: 5px;
        text-align: end;
    }
</style>

<script type="text/javascript" src="ckeditor/ckeditor.js"> </script>
</head>

<body style="font-family: ubuntu;">
    <%- include('../includes/navigation.ejs') %>

    <div class="container mt-5 mb-5">


        <div class="shadow d-flex card">
            <div class="shadow card-header">
                <%- include('adminNavigation.ejs') %>
            </div>

            <div class="shadow d-flex mt-4 card-body">
                <div class="container">
                    <div class="ml-3">
                        <div style="background: #0B3861; color: whitesmoke;">
                            <h3 class="ml-3">Add Research</h3>
                        </div>
                        <br>
                        <form action="/admin/postResearch" method="POST">
                            <!-- <form action="#" method="POST"> -->
                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Title </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="title" class="form-control" placeholder="Title" />
                                </div>

                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Author </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="author" class="form-control"
                                        placeholder="Author" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Files Count </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="filesCount" class="form-control" placeholder="File Count" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Files Size </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="filesSize" class="form-control" placeholder="Files Size" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Photo </h6>
                                </label>
                                <div class="col-sm-10 mt-1">
                                    <input type="file" name="imageUrl" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> </h6>
                                </label>
                                <div class="col-sm-10 mt-1" style="text-align: end;">
                                    <button type="submit" class="btn btn-primary"> Add Research</button>
                                </div>
                            </div>
                            <br>

                        </form>

                    </div>
                </div>
                <!-- </div> -->
                <!-- </div> -->
            </div>
        </div>
    </div>

    <%- include('../includes/end.ejs') %>
