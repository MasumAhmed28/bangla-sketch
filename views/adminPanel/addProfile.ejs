<%- include('../includes/head.ejs') %>
<style>
    .personal-link:hover {
        text-decoration: none;
        color: rgb(56, 204, 51);
    }

    .adminIndex {
        background: rgba(238, 240, 231, 0.815);
        height: 35px;
        padding: 5px;
        text-align: end;
    }

    .adminIndex:hover {
        background: #0B3861;
        color: white;
        height: 35px;
        padding: 5px;
        text-align: end;
    }
</style>

