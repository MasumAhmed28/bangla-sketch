            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#ckeditorT'))
            .then(ckeditorT => {
                console.log(ckeditorT);
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#ckeditorCP'))
            .then(ckeditorCP => {
                console.log(ckeditorCP);
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#ckeditorGS'))
            .then(ckeditorGS => {
                console.log(ckeditorGS);
            })
            .catch(error => {
