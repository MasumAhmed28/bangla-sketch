</head>

<body style="font-family: ubuntu;">
    <%- include('../includes/navigation.ejs') %>

    <div class="container mt-5 mb-5">
        <code style="background:black; color: white;">
            <h1><kbd class="mt-2">Admin Panel</kbd></h1>
        </code>
        <br>

        <div class="shadow d-flex card">
            <div class="d-flex card-header">
                <%- include('adminNavigation.ejs') %>
            </div>

            <div class="shadow d-flex mt-4 card-body">
                <div class="container">
                    <div class="ml-3">
                        <div style="background: #0B3861; color: whitesmoke;">
                            <h3 class="ml-3">Add Profile</h3>
                        </div>
                        <br>
                        <form action="#" method="POST">
                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Name </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="personName" class="form-control" placeholder="Name" />
                                </div>

                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Designation </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="personDesignation" class="form-control"
                                        placeholder="Designation" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Contact Information & Office Address </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditor" name="personContactInformation"
                                        class="form-control" placeholder="Contact Information | Office Address">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Phone </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="personPhone" class="form-control" placeholder="Phone" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Email </h6>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="personEmail" class="form-control" placeholder="Email" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Education </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditorE" name="personEducation"
                                        class="form-control" placeholder="Educational Details">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Research Interests </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditorR" name="personResearchInterests"
                                        class="form-control" placeholder="Research Interests">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Awards & Recongintion </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditorA" name="personAwards" class="form-control"
                                        placeholder="Awards & Recongintion">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Journal Publications </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditorJ" name="personJournals"
                                        class="form-control" placeholder="Journal Publications">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Conference Proceedings </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditorCP" name="personConference"
                                        class="form-control" placeholder="Conference Proceedings">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Teaching </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditorT" name="personTeaching"
                                        class="form-control" placeholder="Teaching & Other Stuffs (if have)">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Graduate Supervision </h6>
                                </label>
                                <div class="col-sm-10">
                                    <textarea class="col-sm-10" id="ckeditorGS" name="personSupervision"
                                        class="form-control" placeholder="Graduate Supervision">
                                    </textarea>
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> Photo </h6>
                                </label>
                                <div class="col-sm-10 mt-1">
                                    <input type="file" name="personPhoto" />
                                </div>
                            </div>
                            <br>

                            <div class="input-group">
                                <label class="col-sm-2 col-form-label">
                                    <h6> </h6>
                                </label>
                                <div class="col-sm-10 mt-1" style="text-align: end;">
                                    <button type="submit" class="btn btn-primary"> Add Profile</button>
                                </div>
                            </div>
                            <br>

                        </form>

                    </div>
                </div>
                <!-- </div> -->
                <!-- </div> -->
            </div>
        </div>
    </div>

    <%- include('../includes/end.ejs') %>

